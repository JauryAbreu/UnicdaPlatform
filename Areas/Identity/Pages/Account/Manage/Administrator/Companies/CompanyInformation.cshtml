@page
@model UnicdaPlatform.Areas.Identity.Pages.Account.Manage.Administrator.Companies.CompanyInformationModel
@{
    ViewBag.Title = "Customer Information";
    Layout = "~/Areas/Identity/Pages/Account/Manage/Administrator/_AdmLayout.cshtml";
}


<div class="container-fluid">
    <div class="cont-all">
        <!-- Page Heading -->
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="tit-general">EMPRESAS</h1>
        </div>

        <!-- Content Row -->
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card shadow mb-4">

                    <div class="card-header py-3">
                        <div class="d-sm-flex align-items-center justify-content-between">
                            <h6 class="m-0 font-weight-bold text-black">Informacion de Empresa</h6>
                        </div>
                    </div>
                    <form enctype="multipart/form-data" method="post">
                        <div class="card-body form-vehiculo">
                            <div class="row">
                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                    <div class="form-group">

                                        <input asp-for="Input.Id" type="text" autocomplete="off" hidden>
                                        <input asp-for="Input.CompanyId" type="text" autocomplete="off" hidden>
                                        <input asp-for="Input.ReceiptId" type="text" autocomplete="off" hidden>
                                        <input asp-for="Input.Logo" type="text" autocomplete="off" hidden>
                                        <input asp-for="Input.StateTemp" type="text" id="StateTempId" autocomplete="off" hidden>
                                        <label for="">Descripcion</label>
                                        <input asp-for="Input.Name" type="text" placeholder=""
                                               class="form-control" id="" autocomplete="off" required>
                                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        <label for="">RNC</label>

                                        <input asp-for="Input.VatNumber" type="text" placeholder=""
                                               class="form-control" id="" autocomplete="off" required>
                                        <span asp-validation-for="Input.VatNumber" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        <label for="">Nombre de la empresa </label>
                                        <input asp-for="Input.CompanyName" type="text" placeholder=""
                                               class="form-control" id="" autocomplete="off">
                                        <span asp-validation-for="Input.CompanyName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        <label for="">Moneda</label>
                                        <input asp-for="Input.Currency" type="number" placeholder="" step=".01"
                                               class="form-control" id="" autocomplete="off" required>
                                        <span asp-validation-for="Input.Currency" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        <label for="">Telefono</label>
                                        <input asp-for="Input.Phone" type="number" placeholder=""
                                               class="form-control" id="" autocomplete="off" required>
                                        <span asp-validation-for="Input.Phone" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        <label for="">Correo Electrónico </label>
                                        <input asp-for="Input.Email" type="email" placeholder=""
                                               class="form-control" id="" autocomplete="off">
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        <label for="">Logo </label>
                                        <input asp-for="Input.LogoFile" placeholder=""
                                               class="form-control" id="" autocomplete="off">
                                        <span asp-validation-for="Input.LogoFile" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        <label for="">Impuesto DGII</label>

                                        <input asp-for="Input.DGIITax" type="text" placeholder="" step=".01"
                                               class="form-control" id="" autocomplete="off" required>
                                        <span asp-validation-for="Input.DGIITax" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        <label for="">Correo Usuario</label>

                                        <input asp-for="Input.EmailSMTP" type="text" placeholder="" step=".01"
                                               class="form-control" id="" autocomplete="off" required>
                                        <span asp-validation-for="Input.EmailSMTP" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        <label for="">Correo Contrase&ntilde;a</label>

                                        <input asp-for="Input.PasswordSMTP" type="text" placeholder="" step=".01"
                                               class="form-control" id="" autocomplete="off" required>
                                        <span asp-validation-for="Input.PasswordSMTP" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        <label for="">Estado</label>
                                        <select class="form-select" asp-for="Input.Deleted" aria-label="">
                                            <option value="false">Activo</option>
                                            <option value="true">Inactivo</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <h6 class="m-0"><b>Dirección</b></h6>
                                    <hr />
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        <label for="">Sector / Calle</label>
                                        <input asp-for="Input.Address" type="text" placeholder=""
                                               class="form-control" id="" autocomplete="off" required>
                                        <span asp-validation-for="Input.Address" class="text-danger"></span>
                                    </div>
                                </div>


                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="margin-bottom: 20px;">

                                    <span asp-validation-for="ErrorMessage" class="text-danger"></span>
                                    <button class="btn btn-sm btn-success shadow-sm" asp-page-handler="Upload"
                                            type="submit" onclick="return confirm('Seguro que desea guardar la Empresa?')"
                                            style="font-size: 16px; ">
                                        <i class="nav-link-icon fa fa-save"> </i> GUARDAR
                                    </button>
                                </div>

                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
<script type="text/javascript"></script>
<script>
    $(document).ready(function () {
        var type = 'GET';
        var url = '/Identity/Account/Manage/Administrator/Companies/CompanyInformation';
        var countryId = $('#CountryId').val();

        var stateId = $('#StateTempId').val();
        var data = { "CountryId": countryId, "StateId": stateId, "handler": "States" };
        var o = Object.keys(data).map(k => k + "=" + encodeURIComponent(data[k])).join("&")
        var city = $('#StateId');
        var request = new XMLHttpRequest();
        request.open('get', url + "?" + o);

        request.onload = function () {
            if (this.status >= 200 && this.status < 400) {
                var jsonData = JSON.parse(this.response);
                if (jsonData !== null) {
                    city.empty();
                    $.each(jsonData, function (index, htmlData) {
                        city.append($('<option />', {
                            value: htmlData.value,
                            text: htmlData.text
                        }));

                        console.log(htmlData.text);
                    });
                }
                console.log("success");
            } else {
                console.log("error");
            }
        };
        request.onerror = function () {
            // There was a connection error of some sort
        };
        request.send();
    });

    $(function () {
        $("#CountryId").change(function () {
            var type = 'GET';
            var url = '/Identity/Account/Manage/Administrator/Companies/CompanyInformation';
            var countryId = $('#CountryId').val();
            var data = { "CountryId": countryId, "handler": "Cities" };
            var o = Object.keys(data).map(k => k + "=" + encodeURIComponent(data[k])).join("&")
            var city = $('#StateId');
            var request = new XMLHttpRequest();
            request.open('get', url + "?" + o);

            request.onload = function () {
                if (this.status >= 200 && this.status < 400) {
                    var jsonData = JSON.parse(this.response);
                    if (jsonData !== null) {
                        city.empty();
                        $.each(jsonData, function (index, htmlData) {
                            city.append($('<option />', {
                                value: htmlData.value,
                                text: htmlData.text
                            }));

                            console.log(htmlData.text);
                        });
                    }
                    console.log("success");
                } else {
                    console.log("error");
                }
            };
            request.onerror = function () {
                // There was a connection error of some sort
            };
            request.send();
        })
    });
</script>