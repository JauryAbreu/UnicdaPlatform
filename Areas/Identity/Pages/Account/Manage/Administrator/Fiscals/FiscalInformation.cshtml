@page
@model UnicdaPlatform.Areas.Identity.Pages.Account.Manage.Administrator.Fiscals.FiscalInformationModel
@{
    ViewBag.Title = "Customer Details";
    Layout = "~/Areas/Identity/Pages/Account/Manage/Administrator/_AdmLayout.cshtml";
}


<div class="container-fluid">
    <div class="cont-all">
        <!-- Page Heading -->
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="tit-general">SECUENCIA DE NCF</h1>
        </div>

        <!-- Content Row -->
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card shadow mb-4">

                    <div class="card-header py-3">
                        <div class="d-sm-flex align-items-center justify-content-between">
                            <h6 class="m-0 font-weight-bold text-black">@Model.Input.NcfDescription</h6>
                        </div>
                    </div>
                    <form method="post">
                        <div class="card-body form-vehiculo">
                            <div class="row">
                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                    <div class="form-group">

                                        <input asp-for="Input.Id" type="text" autocomplete="off" hidden>
                                        <input asp-for="Input.MasterId" type="text" autocomplete="off" hidden>
                                        <input asp-for="Input.CompanyId" type="text" autocomplete="off" hidden>
                                        <input asp-for="Input.NcfId" type="text" autocomplete="off" hidden>
                                        <label for="">Serie</label>
                                        <input asp-for="Input.Serie" type="text" placeholder=""
                                               class="form-control" id="" autocomplete="off" required>
                                        <span asp-validation-for="Input.Serie" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        <label for="">Secuencia de Inicio</label>

                                        <input asp-for="Input.SeqStart" type="number" placeholder=""
                                               class="form-control" id="" autocomplete="off" required>
                                        <span asp-validation-for="Input.SeqStart" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        <label for="">Secuencia Siguiente</label>
                                        <input asp-for="Input.SeqNext" type="number" placeholder=""
                                               class="form-control" id="" autocomplete="off" required>
                                        <span asp-validation-for="Input.SeqNext" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        <label for="">Secuencia Final </label>
                                        <input asp-for="Input.SeqEnd" type="number" placeholder=""
                                               class="form-control" id="" autocomplete="off">
                                        <span asp-validation-for="Input.SeqEnd" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        <label for="">Fecha Inicio</label>
                                        <input asp-for="Input.DateStart" type="date" placeholder=""
                                               class="form-control" id="" autocomplete="off">
                                        <span asp-validation-for="Input.DateStart" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        <label for="">Fecha Final </label>
                                        <input asp-for="Input.DateEnd" type="date" placeholder=""
                                               class="form-control" id="" autocomplete="off">
                                        <span asp-validation-for="Input.DateEnd" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        <label for="">Descripcion</label>
                                        <input asp-for="Input.DGIIDescription" type="text" placeholder=""
                                               class="form-control" id="" autocomplete="off" required >
                                        <span asp-validation-for="Input.DGIIDescription" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        <label for="">Estado</label>
                                        <select class="form-select" asp-for="Input.SeqStatus" aria-label="" disabled>
                                            <option value="0">Pendiente</option>
                                            <option value="1">En Uso</option>
                                            <option value="2">Agotado</option>
                                            <option value="3">Expirado</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="margin-bottom: 20px;">

                                    <span asp-validation-for="ErrorMessage" class="text-danger"></span>
                                    <button class="btn btn-sm btn-success shadow-sm"
                                            type="submit" onclick="return confirm('Seguro que desea guardar la Secuencia Fiscal?')"
                                            style="font-size: 16px; ">
                                        <i class="nav-link-icon fa fa-save"> </i> GUARDAR
                                    </button>
                                </div>

                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
