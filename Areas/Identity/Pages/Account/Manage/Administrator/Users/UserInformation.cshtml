@page
@model UnicdaPlatform.Areas.Identity.Pages.Account.Manage.Administrator.Users.UserInformationModel
@{
    ViewBag.Title = "Customer Details";
    Layout = "~/Areas/Identity/Pages/Account/Manage/Administrator/_AdmLayout.cshtml";
}


<div class="container-fluid">
    <div class="cont-all">
        <!-- Page Heading -->
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="tit-general">USUARIO</h1>
        </div>

        <!-- Content Row -->
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card shadow mb-4">

                    <div class="card-header py-3">
                        <div class="d-sm-flex align-items-center justify-content-between">
                            <h6 class="m-0 font-weight-bold text-black">Informacion de Usuario</h6>
                        </div>
                    </div>
                    <form method="post">
                        <div class="card-body form-vehiculo">
                            <div class="row">
                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                    <div class="form-group">

                                        <input asp-for="Input.Id" type="text" autocomplete="off" hidden>
                                        <input asp-for="Input.MasterId" type="text" autocomplete="off" hidden>
                                        <input asp-for="Input.CompanyId" type="text" autocomplete="off" hidden>
                                        <label for="">Usuario</label>
                                        <input asp-for="Input.UserId" type="text" placeholder=""
                                               class="form-control" id="" autocomplete="off" required>
                                        <span asp-validation-for="Input.UserId" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        <label for="">Nombre</label>
                                        <input asp-for="Input.FirstName" type="text" placeholder=""
                                               class="form-control" id="" autocomplete="off" required>
                                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        <label for="">Apellido</label>

                                        <input asp-for="Input.LastName" type="text" placeholder=""
                                               class="form-control" id="" autocomplete="off" required>
                                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        <label for="">Sexo</label>
                                        <select class="form-select" asp-for="Input.Gender" aria-label="">
                                            <option value="0">Masculino</option>
                                            <option value="1">Femenino</option>
                                            <option value="2">Otro</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        <label for="">Cedula</label>
                                        <input asp-for="Input.VatNumber" type="number" placeholder=""
                                               class="form-control" id="" autocomplete="off" required>
                                        <span asp-validation-for="Input.VatNumber" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        <label for="">Correo Electrónico </label>
                                        <input asp-for="Input.Email" type="text" placeholder=""
                                               class="form-control" id="" autocomplete="off">
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        <label for="">Teléfono</label>
                                        <input asp-for="Input.Phone" type="number" placeholder=""
                                               class="form-control" id="" autocomplete="off" required>
                                        <span asp-validation-for="Input.Phone" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        <label for="">Grupo de Permiso</label>
                                        <div class="form-group">
                                            <select class="form-select" id="CountryId"
                                                    asp-items="@(new SelectList(Model.groups,"Id","Name"))"
                                                    asp-for="Input.GroupId">
                                                <option selected>Seleccionar Grupo</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        <label for="">Estado</label>
                                        <select class="form-select" asp-for="Input.Deleted" aria-label="">
                                            <option value="false">Activo</option>
                                            <option value="true">Inactivo</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <h6 class="m-0"><b>Dirección</b></h6>
                                    <hr />
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <label for="">Sector / Calle</label>
                                        <input asp-for="Input.Address" type="text" placeholder=""
                                               class="form-control" id="" autocomplete="off">
                                        <span asp-validation-for="Input.Address" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="margin-bottom: 20px;">

                                    <span asp-validation-for="ErrorMessage" class="text-danger"></span>
                                    <button class="btn btn-sm btn-success shadow-sm"
                                            type="submit" onclick="return confirm('Seguro que desea guardar el Usuario?')"
                                            style="font-size: 16px; ">
                                        <i class="nav-link-icon fa fa-save"> </i> GUARDAR
                                    </button>
                                </div>

                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
